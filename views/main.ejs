<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Feed - SNS App</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="header-content">
        <h1>Installgram</h1>
        <div class="user-info">
          <span class="username">Welcome, <strong><%= user.id %></strong></span>
          <% if (user.roles && user.roles.includes('admin')) { %>
            <span class="badge badge-admin">Admin</span>
          <% } %>
        </div>
      </div>
      <nav class="nav">
        <a href="/posts/new" class="btn btn-primary">New Post</a>
        <a href="/logout" class="btn btn-secondary">Logout</a>
      </nav>
    </header>
    
    <main class="main-content">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
      <% } %>
      
      <div class="posts-container">
        <% if (posts && posts.length > 0) { %>
          <% posts.forEach(function(post) { %>
            <article class="post-card">
              <div class="post-header">
                <span class="post-author"><%= post.author %></span>
                <span class="post-date">
                  <%= new Date(post.createdAt).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  }) %>
                </span>
              </div>
              
              <div class="post-content">
                <p><%= post.content %></p>
              </div>
              
              <div class="post-actions">
                <form action="/posts/like/<%= post._id %>" method="POST" class="inline-form">
                  <button type="submit" class="btn btn-like <%= post.likedBy && post.likedBy.includes(user.id) ? 'liked' : '' %>">
                    <span class="like-icon">&#9829;</span>
                    <span class="like-count"><%= post.likes %></span>
                  </button>
                </form>
                
                <% if (post.author === user.id || (user.roles && user.roles.includes('admin'))) { %>
                  <form action="/posts/delete/<%= post._id %>" method="POST" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this post?')">
                    <button type="submit" class="btn btn-delete">Delete</button>
                  </form>
                <% } %>
              </div>
            </article>
          <% }); %>
        <% } else { %>
          <div class="empty-state">
            <p>No posts yet. Be the first to share something!</p>
            <a href="/posts/new" class="btn btn-primary">Create Post</a>
          </div>
        <% } %>
      </div>
    </main>
  </div>
</body>
</html>
